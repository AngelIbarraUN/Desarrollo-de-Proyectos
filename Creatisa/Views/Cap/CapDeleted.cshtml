@model CapModel

@{
    ViewData["Title"] = "Borrar la categoría de la Gorra";
}
<link rel="stylesheet" href="~/css/borrar.css">

<div class="container-borrar">
    <div class="mac">
        <img src="~/imgadmin/red.svg" alt="">
        <img src="~/imgadmin/orange.svg" alt="">
        <img src="~/imgadmin/green.svg" alt="">
    </div>
    <div class="content-borrar">
        <h1>¿Estás seguro de que deseas borrar la gorra @Model.Name ?</h1>
    </div>

    <form asp-controller="Cap" asp-action="CapsDeleted">
        <button type="submit" class="boton">Borrar</button>
        <button class="boton" asp-action="CapsList" asp-controller="Cap">Cancelar</button>
    </form>
</div>
