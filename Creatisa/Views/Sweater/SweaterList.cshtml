@model List<SweaterModel>

@{
    ViewData["Title"] = "Listado de Sweaters";
    int Id = 0;
}
<link rel="stylesheet" href="~/css/views.css">

<div class="container-tablas">
    <div class="tabla-titul">
        <h1>Listado de Sweaters</h1>
        <a asp-controller="Sweater" asp-action="SweatersAdd">+ AÃ±adir</a>
    </div>

    <table class="tablass table table-borderless table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Acciones</th>
                <th scope="col">ID</th>
                <th scope="col">Nombre</th>
                <th scope="col">Color</th>
                <th scope="col">Talla</th>
                <th scope="col">Precio</th>
                <th scope="col">Tipo</th>
                <th scope="col">Material</th>
                <th scope="col">Cantidad</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sweater in Model)
            {
                Id++;
                <tr>
                    <td>
                        <a class="btn" asp-controller="Sweater" asp-action="SweatersEdit" asp-route-id="@sweater.Id">
                            <img class="editarr" src="~/imgadmin/edit.svg" alt="Editar">
                        </a>
                        <a class="btn" asp-controller="Sweater" asp-action="SweatersDeleted" asp-route-id="@sweater.Id">
                            <img class="editarr" src="~/imgadmin/basura.svg" alt="Eliminar">
                        </a></td>
                      </tr>  
            }
