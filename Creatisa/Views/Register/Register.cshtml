@model RegisterViewModel
<dialog id="register_modal" class="modal">
    <div class="modal-box md:max-w-sm max-w-xs">
        <form hx-post="@Url.Action("Register", "Register")" hx-swap="none">
            <div class="text-center">
                <h3 class="font-semibold text-xl">Registro</h3>
            </div>
            <div>
                <div class="form-control mt-2">
                    <label class="label" asp-for="Email">
                        <span class="label-text font-medium">Correo</span>
                    </label>
                    <input asp-for="Email"
                        autocomplete="email"
                        class="input join-item input-bordered w-full input-sm"
                        placeholder="name@nowhere.com"
                        type="email"
                        required="required"/>
                </div>
                <div class="form-control mt-2">
                    <label class="label" asp-for="Password">
                        <span class="label-text font-medium">Contraseña</span>
                    </label>
                    <input asp-for="Password"
                        autocomplete="new-password"
                        class="input join-item input-bordered w-full input-sm"
                        placeholder="Pa$$w0rd"
                        type="password"
                        required="required"/>

                    @*  <!-- TODO: implement input validation client side (Alpine) -->
                    <div class="label">
                    <span class="label-text-alt text-base-content/70 text-xs">Min 12 letters required</span>
                </div> *@
                </div>
                <div class="form-control mt-2">
                    <label class="label" asp-for="ConfirmPassword">
                        <span class="label-text font-medium">Contraseña</span>
                    </label>
                    <input asp-for="ConfirmPassword"
                        autocomplete="new-password"
                        class="input join-item input-bordered w-full input-sm"
                        placeholder="Pa$$w0rd"
                        type="password"
                        required="required"/>
                </div>
                <div class="flex items-center justify-end mt-3  gap-3">
                    <button class="btn btn-sm btn-primary" type="submit">
                        Registro
                    </button>
                </div>
                <div class="flex items-center gap-3 mt-6">
                    <hr class="border-base-content/5 grow"/>
                    <span class="text-base-content/70">Iniciar sesión con:</span>
                    <hr class="border-base-content/5 grow"/>
                </div>

                <div class="flex mt-6 gap-4">
                    <button class="btn block btn-sm grow" disabled="disabled">
                        Google
                    </button>
                    <button class="btn block btn-sm grow btn-neutral" disabled="disabled">
                        Github
                    </button>
                </div>
            </div>
        </form>
    </div>
    <form method="dialog" class="modal-backdrop">
        <button>x</button>
    </form>
</dialog>

